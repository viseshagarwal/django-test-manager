{
  "name": "django-test-manager",
  "displayName": "Django Test Manager",
  "description": "Efficiently manage and run Django tests in VS Code",
  "version": "0.3.2",
  "publisher": "viseshagarwal",
  "author": {
    "name": "Visesh Agarwal"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/viseshagarwal/django-test-manager.git"
  },
  "icon": "icon.png",
  "keywords": [
    "django",
    "python",
    "test",
    "testing",
    "unittest",
    "pytest",
    "test explorer",
    "django test runner"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Programming Languages"
  ],
  "homepage": "https://github.com/viseshagarwal/django-test-manager#readme",
  "bugs": {
    "url": "https://github.com/viseshagarwal/django-test-manager/issues"
  },
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:manage.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "django-test-manager.refreshTests",
        "title": "Refresh Django Tests",
        "icon": "$(refresh)",
        "tooltip": "Refresh the test list"
      },
      {
        "command": "django-test-manager.runTest",
        "title": "Run Test",
        "icon": "$(play)",
        "tooltip": "Run this test"
      },
      {
        "command": "django-test-manager.debugTest",
        "title": "Debug Test",
        "icon": "$(debug-alt)",
        "tooltip": "Debug this test"
      },
      {
        "command": "django-test-manager.copyPath",
        "title": "Copy Path",
        "icon": "$(copy)",
        "tooltip": "Copy dotted path to clipboard"
      },
      {
        "command": "django-test-manager.runInTerminal",
        "title": "Run in Terminal",
        "icon": "$(terminal)",
        "tooltip": "Run test command in terminal"
      },
      {
        "command": "django-test-manager.runFailedTests",
        "title": "Run Failed Tests",
        "icon": "$(error)",
        "tooltip": "Rerun only failed tests"
      },
      {
        "command": "django-test-manager.runCurrentFile",
        "title": "Run Django Tests in File",
        "icon": "icon.svg",
        "tooltip": "Run all tests in the current file"
      },
      {
        "command": "django-test-manager.runAllTests",
        "title": "Run All Tests",
        "icon": "$(run-all)",
        "tooltip": "Run all Django tests"
      },
      {
        "command": "django-test-manager.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)",
        "tooltip": "Expand all folders"
      },
      {
        "command": "django-test-manager.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)",
        "tooltip": "Collapse all folders"
      },
      {
        "command": "django-test-manager.configure",
        "title": "Configure Django Tests",
        "icon": "$(gear)",
        "tooltip": "Configure test runner settings"
      },
      {
        "command": "django-test-manager.selectProfile",
        "title": "Select Test Profile",
        "icon": "$(list-selection)",
        "tooltip": "Select active test profile"
      },
      {
        "command": "django-test-manager.runRelatedTest",
        "title": "Run Related Test",
        "icon": "$(arrow-swap)",
        "tooltip": "Run the test file corresponding to the current file"
      },
      {
        "command": "django-test-manager.searchTests",
        "title": "Search Tests",
        "icon": "$(search)",
        "tooltip": "Search for a test to run"
      },
      {
        "command": "django-test-manager.cancelTests",
        "title": "Cancel Tests",
        "icon": "$(stop-circle)",
        "tooltip": "Stop running tests"
      },
      {
        "command": "django-test-manager.runTestAtCursor",
        "title": "Run Test at Cursor",
        "icon": "$(play)",
        "tooltip": "Run the test method or class at the current cursor position"
      },
      {
        "command": "django-test-manager.debugTestAtCursor",
        "title": "Debug Test at Cursor",
        "icon": "$(debug-alt)",
        "tooltip": "Debug the test method or class at the current cursor position"
      },
      {
        "command": "django-test-manager.toggleWatchMode",
        "title": "Toggle Watch Mode",
        "icon": "$(eye)",
        "tooltip": "Toggle automatic test running on file changes"
      },
      {
        "command": "django-test-manager.viewTestHistory",
        "title": "View Test History",
        "icon": "$(history)",
        "tooltip": "View history of test runs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "django-test-manager",
          "title": "Django Tests",
          "icon": "resources/activity_icon.svg"
        }
      ]
    },
    "views": {
      "django-test-manager": [
        {
          "id": "djangoTestExplorer",
          "name": "Test Explorer",
          "icon": "resources/activity_icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "django-test-manager.refreshTests",
          "when": "view == djangoTestExplorer",
          "group": "navigation@0"
        },
        {
          "command": "django-test-manager.runAllTests",
          "when": "view == djangoTestExplorer",
          "group": "navigation@1"
        },
        {
          "command": "django-test-manager.configure",
          "when": "view == djangoTestExplorer",
          "group": "navigation@-1"
        },
        {
          "command": "django-test-manager.searchTests",
          "when": "view == djangoTestExplorer",
          "group": "navigation@0"
        },
        {
          "command": "django-test-manager.cancelTests",
          "when": "view == djangoTestExplorer && djangoTestManager.isRunning",
          "group": "navigation@0.5"
        },
        {
          "command": "django-test-manager.runFailedTests",
          "when": "view == djangoTestExplorer",
          "group": "navigation@2"
        },
        {
          "command": "django-test-manager.collapseAll",
          "when": "view == djangoTestExplorer",
          "group": "navigation@4"
        },
        {
          "command": "django-test-manager.selectProfile",
          "when": "view == djangoTestExplorer",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "django-test-manager.runTest",
          "when": "view == djangoTestExplorer",
          "group": "inline"
        },
        {
          "command": "django-test-manager.debugTest",
          "when": "view == djangoTestExplorer",
          "group": "inline"
        },
        {
          "command": "django-test-manager.runTest",
          "when": "view == djangoTestExplorer"
        },
        {
          "command": "django-test-manager.debugTest",
          "when": "view == djangoTestExplorer"
        },
        {
          "command": "django-test-manager.copyPath",
          "when": "view == djangoTestExplorer",
          "group": "inline"
        },
        {
          "command": "django-test-manager.copyPath",
          "when": "view == djangoTestExplorer"
        }
      ],
      "editor/title": [
        {
          "command": "django-test-manager.runCurrentFile",
          "when": "resourceLangId == python",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Django Test Manager",
      "properties": {
        "djangoTestManager.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the Python interpreter (e.g. 'python', 'python3', or path to venv python)"
        },
        "djangoTestManager.managePyPath": {
          "type": "string",
          "default": "manage.py",
          "description": "Path to manage.py file. Supports relative paths (relative to projectRoot), absolute paths, or variable substitution like ${workspaceFolder}/path/to/manage.py"
        },
        "djangoTestManager.testCommandTemplate": {
          "type": "string",
          "default": "${pythonPath} ${managePyPath} test ${testPath} ${testArguments}",
          "description": "Template for the test command. Variables: ${pythonPath}, ${managePyPath}, ${testPath}, ${testArguments}"
        },
        "djangoTestManager.envFilePath": {
          "type": "string",
          "default": ".env",
          "description": "Path to .env file. Supports relative paths (relative to projectRoot), absolute paths, or variable substitution like ${workspaceFolder}/.env. Set to empty string to disable .env file loading."
        },
        "djangoTestManager.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Root path of the Django project. If empty, uses workspace root. Can be absolute or relative to workspace root."
        },
        "djangoTestManager.testArguments": {
          "type": "array",
          "default": [],
          "description": "Additional arguments to append to the test command"
        },
        "djangoTestManager.environmentVariables": {
          "type": "object",
          "default": {},
          "description": "Environment variables to set when running tests"
        },
        "djangoTestManager.testProfiles": {
          "type": "object",
          "default": {
            "Default": [],
            "Fast": [
              "--keepdb",
              "--failfast",
              "--parallel"
            ],
            "Clean": [
              "--noinput"
            ]
          },
          "description": "Define test profiles with specific arguments. Default profile runs tests sequentially. Use Parallel or Fast profiles for parallel execution."
        },
        "djangoTestManager.activeProfile": {
          "type": "string",
          "default": "Default",
          "description": "Currently active test profile"
        },
        "djangoTestManager.testFilePattern": {
          "type": "string",
          "default": "**/*test*.py",
          "description": "Glob pattern to find test files (e.g. **/*test*.py, **/tests.py)"
        },
        "djangoTestManager.testMethodPattern": {
          "type": "string",
          "default": "test_",
          "description": "Prefix for test methods (e.g. 'test_'). Used to identify test methods in files."
        },
        "djangoTestManager.testBaseClasses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional test base class names to recognize (e.g. 'MyCustomTestCase'). The extension automatically recognizes Django TestCase, DRF APITestCase, and classes starting with 'Test'."
        },
        "djangoTestManager.enableCoverage": {
          "type": "boolean",
          "default": false,
          "description": "Enable code coverage. Requires 'coverage' installed in your environment."
        },
        "djangoTestManager.coverageCommand": {
          "type": "string",
          "default": "coverage",
          "description": "Command to run coverage (e.g. 'coverage' or 'python -m coverage')."
        },
        "djangoTestManager.watchMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable watch mode to automatically run tests when files change."
        },
        "djangoTestManager.watchDebounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce time in milliseconds for watch mode (how long to wait after file changes before running tests)."
        },
        "djangoTestManager.watchPattern": {
          "type": "string",
          "default": "**/*.py",
          "description": "Glob pattern for files to watch in watch mode."
        },
        "djangoTestManager.watchRunAffectedOnly": {
          "type": "boolean",
          "default": true,
          "description": "In watch mode, only run tests related to changed files instead of all tests."
        },
        "djangoTestManager.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show desktop notifications when tests complete."
        },
        "djangoTestManager.useNativeTestExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Enable VS Code's native Test Explorer integration. This allows you to use VS Code's built-in test runner UI in addition to the Django Test Explorer sidebar."
        },
        "djangoTestManager.historyMaxSessions": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of test sessions to keep in history."
        }
      }
    },
    "keybindings": [
      {
        "command": "django-test-manager.runTestAtCursor",
        "key": "ctrl+alt+t",
        "mac": "ctrl+cmd+t",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "django-test-manager.debugTestAtCursor",
        "key": "ctrl+alt+d",
        "mac": "ctrl+cmd+d",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "django-test-manager.runCurrentFile",
        "key": "ctrl+alt+f",
        "mac": "ctrl+cmd+f",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "django-test-manager.runAllTests",
        "key": "ctrl+alt+a",
        "mac": "ctrl+cmd+a"
      },
      {
        "command": "django-test-manager.runFailedTests",
        "key": "ctrl+alt+e",
        "mac": "ctrl+cmd+e"
      },
      {
        "command": "django-test-manager.toggleWatchMode",
        "key": "ctrl+alt+w",
        "mac": "ctrl+cmd+w"
      },
      {
        "command": "django-test-manager.viewTestHistory",
        "key": "ctrl+alt+h",
        "mac": "ctrl+cmd+h"
      },
      {
        "command": "django-test-manager.searchTests",
        "key": "ctrl+alt+s",
        "mac": "ctrl+cmd+s"
      },
      {
        "command": "django-test-manager.refreshTests",
        "key": "ctrl+alt+r",
        "mac": "ctrl+cmd+r"
      },
      {
        "command": "django-test-manager.cancelTests",
        "key": "ctrl+alt+c",
        "mac": "ctrl+cmd+c",
        "when": "djangoTestManager.isRunning"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src/ --max-warnings 50",
    "lint:fix": "eslint src/ --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.50.0"
  }
}